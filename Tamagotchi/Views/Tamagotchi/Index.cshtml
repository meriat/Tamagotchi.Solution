<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Tamagotchi</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1> Your Tamagotchis</h1>
      </div>
      <ul>
        @foreach(var tama in Model)
        {
          <br>
          <li><a href='/tamas/@tama.id'>@tama.name</a></li>
        }
      </ul>
      <form action='/tamas/pass' method='post'>
        <button class="btn btn-info" type="submit">Pass Time</button>
      </form>
        <a href="/tamas/new">Add a new Tama Toy</a>
    </div>
  </body>
</html>
